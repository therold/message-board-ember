<form {{action 'save' post on='submit'}}>

  <div class="form-group">
    <label for="author">Your name</label>
    {{input value=author id="author" class="form-control" required="required"}}
  </div>

  <div class="form-group">
    <label for="body">Answer</label>
    {{textarea value=body id="body" class="form-control" rows=8 required="required"}}
  </div>

  <button class="btn btn-success">New Answer</button>
  <button class="btn btn-default" {{action 'cancel'}}>Cancel</button>
</form>
