<form {{action 'save' post on='submit'}}>

  <div class="form-group">
    <label for="title">Question</label>
    {{input value=title id="title" class="form-control" required="required"}}
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" class="form-control" required="required"}}
  </div>

  <div class="form-group">
    <label for="body">Details</label>
    {{textarea value=body id="body" class="form-control" rows=8 required="required"}}
  </div>

  <div class="form-group">
    <label for="tags">Tags</label>
    {{input value=tags id="tags" class="form-control" required="required"}}
  </div>

  <button class="btn btn-success">New Question</button>
  <button class="btn btn-default" {{action 'cancel'}}>Cancel</button>
</form>
